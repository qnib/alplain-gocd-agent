version: '3'
services:
  server:
    image: qnib/alplain-gocd-server
    ports:
     - 8153:8153
    environment:
     - GOCD_SERVER_CLEAN_WORKSPACE=false
  agent:
    image: qnib/alplain-gocd-agent
    environment:
     - GO_SERVER=gocd_server
     - DOCKER_HOST=unix:///var/run/docker.sock
    volumes:
     - /var/run/docker.sock:/var/run/docker.sock
